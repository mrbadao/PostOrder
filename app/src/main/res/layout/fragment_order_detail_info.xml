<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="tk.order_sys.Postorder.OrderDetailActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="2"
    android:id="@+id/tableLayoutOrderDetailInfo"
    android:paddingLeft="2dp"
    android:paddingTop="30dp"
    android:paddingRight="2dp"
    android:paddingBottom="10dp">

    <TableRow>
        <TextView android:id="@+id/txtOrderDetailInfoLabelName"
            android:layout_width="0dp"
            android:text="Tên khách hàng"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            />

        <TextView android:id="@+id/txtOrderDetailInfoName"
            android:layout_width="0dp"
            android:text="Nguyễn Chí Hiếu"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="-1.8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            android:textAlignment="gravity" />
    </TableRow>

    <TableRow android:layout_marginTop="-1.8dp">
        <TextView android:id="@+id/txtOrderDetailInfoLabelPhone"
            android:layout_width="0dp"
            android:text="Số điện thoại"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            />

        <TextView android:id="@+id/txtOrderDetailInfoPhone"
            android:layout_width="0dp"
            android:text="0169.75.15.475"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="-1.8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            android:textAlignment="gravity" />
    </TableRow>

    <TableRow android:layout_marginTop="-1.8dp">
        <TextView android:id="@+id/txtOrderDetailInfoLabelAddress"
            android:layout_width="0dp"
            android:text="Địa chỉ"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            />

        <TextView android:id="@+id/txtOrderDetailInfoAddress"
            android:layout_width="0dp"
            android:text="487/3 NTT, RG, KG"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="-1.8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            android:textAlignment="gravity" />
    </TableRow>

    <TableRow android:layout_marginTop="-1.8dp">
        <TextView android:id="@+id/txtOrderDetailInfoLabelCreated"
            android:layout_width="0dp"
            android:text="Ngày đặt"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            />

        <TextView android:id="@+id/txtOrderDetailInfoCreated"
            android:layout_width="0dp"
            android:text="30/04/2015"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="-1.8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/order_detail_info_cell_shape"
            android:textAlignment="gravity" />
    </TableRow>


</TableLayout>
